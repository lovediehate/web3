{% extends 'admin/adminbase.html.twig' %}
{% block body %}
    <br>
    <div class="container flex flex-col justify-left ml-5 w-full border">
        <h1 class="text-xl ml-5">
            {{ title }}
        </h1>
        <br>
        <ul>
            {% for answer in answers %}
                <li>
                    <div class="bg-gray-100 p-2 flex-grow border break-words">
                        <h1 class="font-medium">id:</h1> {{ answer.id }} <br>
                        <h1 class="font-medium">User:</h1> {{ answer.user.email }} <br>
                        <h1 class="font-medium">Текст:</h1> {{ answer.content }} <br>
                    </div>
                </li>
            {% endfor %}
        </ul> 
    </div>
{% endblock %}