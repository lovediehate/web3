<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Админка{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
         {% block stylesheets %}
        <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
     
    </head>
    <body>
     <div class="flex flex-col h-screen">
    
        
        <header class="bg-purple-500">
            <div class="flex flex-row justify-between items-center top-floor h-20 border-b-2 bg-opacity-70">
                <ul class="flex flex-row justify-between text-lg ml-10 mr-10 mt-10 w-1/5 text-red-50 text-base h-full w-full">
                    <li class="text-2xl">
                        <a class = "mt-8"href="{{ path('about') }}">О проекте</a><br>
                    </li>
                    <li class="w-auto">
                        {% if (app.user) %}
                        <ul class="flex flex-row">
                            <li class="w-auto  ml-5">
                                Добрый день, {{ app.user.username }} 
                            </li>

                            <li class="w-auto  ml-5">
                                 <a href="{{ path('home') }}">Выход на главную</a>
                            </li>

                            <li class="w-auto  ml-5">
                                <a href="{{ path('app_logout') }}">Выйти</a>
                            </li>
                        </ul>
                        {% else %} 
                        <ul class="flex flex-row">
                            <li class="w-auto ml-5">
                                <a href="{{ path('app_login') }}">Войти</a><br></li>
                            </li>
                            <li class="w-auto ml-5">
                                <a href="{{ path('signup') }}">Регистрация</a><br></li>
                            </li>
                         </ul>
                        {% endif %}
                    </li>
            </div>
            </header>
            <header class="bg-gray-500">
            <div class="flex flex-row justify-between items-center top-floor h-20 border-b-2 bg-opacity-70">
                <ul class="flex flex-row justify-between text-lg ml-10 mr-10 mt-10 w-1/5 text-red-50 text-base h-full w-full">
                    <li class="text-2xl ml-5">
                        <a href="{{ path('admin_home') }}">Админ панель</a>
                    </li>
                    <li class="w-auto  ml-5">
                               <a href="{{ path('admin_user') }}">Пользователи</a>
                            </li>
                            <li class="w-auto  ml-5">
                               <a href="{{ path('admin_question') }}">Вопросы</a>
                            </li>
                            <li class="w-auto  ml-5">
                               <a href="{{ path('admin_answer') }}">Ответы</a>
                            </li>
                            <li class="w-auto  ml-5">
                               <a href="{{ path('admin_category') }}">Категории</a>
                            </li>
                    
            </div>
            </header>
   
        {% block body %}
        
        {% endblock %}
    </body>
</html>
