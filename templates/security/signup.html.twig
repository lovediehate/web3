{% extends 'main/base.html.twig' %}
{% block body %}

   <div class="p-8 pb-36 static w-screen flex  h-screen items-center justify-center">
        {{ form_start(form, { 'attr': {'class': 'w-full max-w-sm m-auto'} }) }}
        {% if error is defined %}
                    <p class="-mt-5 absolute flex justify-center items-center text-center text-red-500 text-xl">{{ error }}</p>
                {% endif %}
                <h2 class="font-bold text-center text-2xl mb-5 text-gray-500">
                    Регистрация
                </h2>
                
                <div class="md:flex md:items-center mb-6">
                    <div class="md:w-1/3">
                        {{ form_label(form.email, null,
                            form_errors(form.email)|length ? { 'label_attr': {'class': 'block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4'} } :
                            {'label_attr': {'class': 'block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4'}}) }}
                    </div>  
                    <div class="md:w-2/3">
                        {{ form_widget(form.email, {'attr': {'class': 'bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500'}}) }}                    
                    </div>
                
                    <span class="w-full flex justify-center absolute text-red-500 text-xs italic">{{ form_errors(form.email) }}</span>
                </div>

                <div class="md:flex md:items-center mb-6">
                        <div class="md:w-1/3">
                            {{ form_label(form.plainPassword, null,
                                form_errors(form.plainPassword)|length ? { 'label_attr': {'class': 'block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="inline-password'} } :
                                {'label_attr': {'class': 'block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4'}}) }}
                        </div>
                        <div class="md:w-2/3">
                            {{ form_widget(form.plainPassword, {'attr': {'class': 'bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500'}}) }}                    
                        </div>
                    
                    <span class="w-full flex justify-center absolute text-red-500 text-xs italic">{{ form_errors(form.plainPassword) }}</span>
                </div>
                 <div class="md:flex md:items-center">
                    <div class="md:w-1/3"></div>
                     <div class="md:w-2/3">
                        {{ form_widget(form.save, {'attr' : {'class' : 'text-white font-bold shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none rounded py-2 px-4 '}})}}
                    </div>
                </div>
            </div>
         {{ form_end(form) }}
    </div>
{% endblock %}